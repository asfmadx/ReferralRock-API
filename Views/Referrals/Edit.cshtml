@model RockApi.Referral

@{
    ViewData["Title"] = "Edit Referral";
}
<div class="white-block">
    <a class="btn btn-outline-primary" href="@ViewData["returnUrl"]">Back</a>
    <h1>Edit Referral</h1>
    <hr />
    <form asp-action="Edit">
        <input type="hidden" name="returnUrl" value="@ViewData["returnUrl"]" />
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="id" class="control-label"></label>
                    <input asp-for="id" readonly class="form-control" />
                    <span asp-validation-for="id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="firstName" class="control-label"></label>
                    <input asp-for="firstName" class="form-control" />
                    <span asp-validation-for="firstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="email" class="control-label"></label>
                    <input asp-for="email" class="form-control" />
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="preferredContact" class="control-label"></label>
                    <input asp-for="preferredContact" class="form-control" />
                    <span asp-validation-for="preferredContact" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="externalIdentifier" class="control-label"></label>
                    <input asp-for="externalIdentifier" class="form-control" />
                    <span asp-validation-for="externalIdentifier" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="note" class="control-label"></label>
                    <input asp-for="note" class="form-control" />
                    <span asp-validation-for="note" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="status" class="control-label"></label>
                    <input asp-for="status" class="form-control" />
                    <span asp-validation-for="status" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="lastName" class="control-label"></label>
                    <input asp-for="lastName" class="form-control" />
                    <span asp-validation-for="lastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="phoneNumber" class="control-label"></label>
                    <input asp-for="phoneNumber" class="form-control" />
                    <span asp-validation-for="phoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="companyName" class="control-label"></label>
                    <input asp-for="companyName" class="form-control" />
                    <span asp-validation-for="companyName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="amount" class="control-label"></label>
                    <input asp-for="amount" class="form-control" />
                    <span asp-validation-for="amount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="publicNote" class="control-label"></label>
                    <input asp-for="publicNote" class="form-control" />
                    <span asp-validation-for="publicNote" class="text-danger"></span>
                </div>
            </div>
        </div>
        <hr />
        <h4>Custom Info</h4>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="customOption1Name" class="control-label"></label>
                    <input asp-for="customOption1Name" class="form-control" />
                    <span asp-validation-for="customOption1Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="customOption2Name" class="control-label"></label>
                    <input asp-for="customOption2Name" class="form-control" />
                    <span asp-validation-for="customOption2Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="customText1Name" class="control-label"></label>
                    <input asp-for="customText1Name" class="form-control" />
                    <span asp-validation-for="customText1Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="customText2Name" class="control-label"></label>
                    <input asp-for="customText2Name" class="form-control" />
                    <span asp-validation-for="customText2Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="customText3Name" class="control-label"></label>
                    <input asp-for="customText3Name" class="form-control" />
                    <span asp-validation-for="customText3Name" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="customOption1Value" class="control-label"></label>
                    <input asp-for="customOption1Value" class="form-control" />
                    <span asp-validation-for="customOption1Value" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="customOption2Value" class="control-label"></label>
                    <input asp-for="customOption2Value" class="form-control" />
                    <span asp-validation-for="customOption2Value" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="customText1Value" class="control-label"></label>
                    <input asp-for="customText1Value" class="form-control" />
                    <span asp-validation-for="customText1Value" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="customText2Value" class="control-label"></label>
                    <input asp-for="customText2Value" class="form-control" />
                    <span asp-validation-for="customText2Value" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="customText3Value" class="control-label"></label>
                    <input asp-for="customText3Value" class="form-control" />
                    <span asp-validation-for="customText3Value" class="text-danger"></span>
                </div>
            </div>
        </div>
        <hr />
        <div class="text-right">
            <a class="btn btn-outline-primary" href="@ViewData["returnUrl"]">Back</a>
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
